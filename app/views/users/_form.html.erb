  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :course %>
    <%= f.text_field :course %>
  </div>
  
  <div class="field">
    <%= f.label :student_id, "Student id" %>
    <!--<p>STUDENT ID</p>-->
    <%= f.number_field :student_id %>
  </div>


  <div class="field">
    <%= f.label :student %>
    <%= f.check_box :student %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


  </div>
